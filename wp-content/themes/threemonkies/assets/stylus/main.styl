@import "nib"
@import "normalize.styl"
@import "icons.styl"
@import "basic.styl"
@import "wc.styl"
@import "tables.styl"
body
	line-height: 26px

b,strong
	color: verde
h2 
	color lima
h3
	color naranja

.nav-is-open
	.section-right
		display block
.info-is-open
	.header-top
		display block

.header
	position: relative
	z-index 3
	min-height: 75px
	&-top
		display none
		max-width: 130px;
		position absolute
		left 0
		top 3rem

		//padding-left: 1rem
		a
			background: rgba(0,0,0,0.6);
			color: #fff;
			cursor: pointer;
			display: block//inline-block;
			font-size: 13px;
			font-weight: 300;
			//height: 70px;
			margin-right: .1em;
			padding: 1em .5rem;
			text-align: center;
			vertical-align: top;
			//width: 95px;
			svg 
				font-size: 1.5rem
			span
				display block
				line-height: 15px
		#reservation-tour
			&:hover
				background: naranja
		#reservation-shuttle
			&:hover
				background: lima
		#contact
			display none
			font-size: 12.5px
			&:hover
				background: verde

		#contact-small
			display block
			&:hover
				background: verde
.btn-menu
.btn-info
	background-color: rgba(0,0,0,.75)
	border none 
	outline: none 
	color white
	display block
	position absolute
	right 0
	padding: .5rem 1rem
	top: 0
	font-size: 1.5rem

.btn-info
	left 0
	right  auto


@media screen and (min-width: 625px)
	.header
		&-top
			display block !important
			max-width: 100%;
			top 0
			a 
				display: inline-block;
			#contact
				display inline-block
			#contact-small
				display none
	.btn-info
		display none

@media screen and (min-width: 960px)
	.header
		&-top
			display block
			#contact
				display inline-block
			#contact-small
				display none

.section-right
	position absolute
	left 0
	right 0
	top 3rem
	z-index: 3
	display none
	background-color: rgba(0,0,0,.75)
.logo-small
	background-color: rgba(0,0,0,.75)
	padding: .15rem .5rem
	display block
	width: 125px
	position absolute
	right 3.5rem
	img
		display block

	
.logo 
	background-color: rgba(255,255,255,.75)
	display none
	padding: .5rem
	margin-bottom: .3rem

@media screen and (min-width: 960px)
	.logo-small
		display none
	.logo
		display block

	.section-right
		position fixed
		left 0
		right 1rem
		bottom 0
		top 0
		z-index: 3
		width: 210px;
		background: transparent


.menu-right
	box-shadow 1px 1px 5px rgba(0,0,0,.15)
	border-radius 0 0 0 0
	ul
		margin-left: 0

	li 
		display block
		margin-bottom: .3rem
		background-color: rgba(0,0,0,.75)

		&:hover
			&.lime
				background-color: lima 
			&.green
				background-color: verde 
			&.orange
				background-color: naranja 
			
	#menu-item-7
		animation: pulseColor 1s ease infinite;
		background-color: rojo
		&:hover
			animation none	

	a 
		display block
		padding .3rem 1rem
		color white
		text-align right
		font-size: 12px
		text-transform: uppercase
		
		
		i 
			display block
			font-size 1.2rem
		span
			display inline-block
			color #3a2b14
	.sub-menu 
		display: none
		//background-color: rgba(0,0,0,.75)

		li
			background-color transparent
		a
			background-color: rgba(0,0,0,.1)
			padding: .2rem 1rem
			text-transform: capitalize
			text-align: left
			line-height: 18px
			&:hover
				background-color: rgba(0,0,0,.2)

	.featured
		background-color: naranja
		color:white
		span 
			color: white

@media screen and (min-width: 960px)
	.banner 
		h1
			font-size: 3rem
			line-height: 60px
			
	.section-right
		left auto
		bottom: auto
		top 0
		display block

	.menu-right	
		ul
			display: block
		li
			display block
	.btn-menu
		display none


.banner
	background-image: url('./img/pattern.png'),url('./img/bg.jpg');
	background-size auto, cover
	background-repeat repeat, no-repeat
	background-position center center
	height 100vh
	width: 100%;
	position: fixed;
	left: 0;
	bottom: 0;
	top: 0;
	z-index: -1
	&-container
		height 100vh
		display flex
		justify-content start
		align-items center
	&-info
		//text-align center
		max-width 750px
		color white
		padding-left 1rem
	h1 
		margin-bottom 1rem
		color white
		font-size 4rem
		font-weight: 100

		
	p 
		font-size 4rem
		font-weight: 900
		text-transform: uppercase
		line-height: 58px

.home
	&-container
		height 60vh
		display flex
		justify-content start
		align-items center
	&-info
		max-width 750px
		color white

		h1 
			margin-bottom 1rem
			color white
			font-size 2.5rem
			font-weight: 100
			text-transform: capitalize
			

			
		p 
			font-size 3rem
			font-weight: 900
			text-transform: uppercase
			line-height: 45px
@media screen and (min-width: 768px)
	.home
		&-container
			height 70vh
		&-info
			padding-left 1rem
			h1 
				font-size 3rem
				line-height: 4rem

				
			p 
				font-size 4rem
				line-height: 58px
	

.main 
	max-width 768px
	padding: .5rem
	a
		&:hover
			text-decoration: underline

.details-container
	width: 100%
	margin-bottom: 1rem
	ul 
		list-style none

@media screen and (min-width: 640px)
	.main 
		padding: 1rem
	.details-container
		width: 48%
		ul 
			list-style none
	.details-container-right
		text-align: right 
	.details-container-left
		text-align: left 

